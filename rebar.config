%% Tell rebar about this directory's structure
{lib_dirs, ["apps", "deps"]}.
{sub_dirs, ["apps/*"]}.

{require_otp_vsn, "17"}.

{cover_enabled, true}.

%% Compiler options
{erl_opts, [debug_info, fail_on_warning]}.

{clean_files, [
    "_rel",
    "apps/*/ebin",
    "apps/*/.eunit",
    "apps/*/logs"
]}.

{deps, [
    {couchbeam,     ".*", {git, "git://github.com/benoitc/couchbeam",      {tag, "1.1.3"}}},
    {cowboy,        ".*", {git, "git://github.com/ninenines/cowboy",       {tag, "0.8.6"}}},
    {mimetypes,     ".*", {git, "git://github.com/spawngrid/mimetypes",    {branch, "master"}}},
    {nitrogen_core, ".*", {git, "git://github.com/nitrogen/nitrogen_core", {tag, "v2.2.2"}}},
    {nprocreg,      ".*", {git, "git://github.com/nitrogen/nprocreg",      {tag, "v0.2.1"}}},
    {ranch,         ".*", {git, "git://github.com/ninenines/ranch",        {tag, "0.8.4"}}},
    {simple_bridge, ".*", {git, "git://github.com/nitrogen/simple_bridge", {tag, "v1.4.0"}}},
    {sync,          ".*", {git, "git://github.com/rustyio/sync",           {branch, "master"}}},
    {emagick,       ".*", {git, "git://github.com/kivra/emagick",          {branch, "master"}}},
    {uuid,          ".*", {git, "git://github.com/okeuday/uuid",           {tag, "v1.3.0"}}}
]}.
