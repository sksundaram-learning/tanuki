%% Tell rebar about this directory's structure
{lib_dirs, ["apps", "deps"]}.
{sub_dirs, ["apps/*"]}.

{require_otp_vsn, "17|18"}.

{cover_enabled, true}.

%% Compiler options
{erl_opts, [
    debug_info,
    fail_on_warning,
    {parse_transform, lager_transform}
]}.

{clean_files, [
    "_rel",
    "apps/*/ebin",
    "apps/*/.eunit",
    "apps/*/logs",
    "apps/*/src/*.beam",
    "apps/*/src/nitrogen/*.beam",
    "apps/*/test/*.beam"
]}.

{deps, [
    {couchbeam,     ".*", {git, "https://github.com/benoitc/couchbeam",      {tag, "1.1.7"}}},
    {cowboy,        ".*", {git, "https://github.com/ninenines/cowboy",       {tag, "1.0.4"}}},
    {emagick_rs,    ".*", {git, "https://github.com/nlfiedler/emagick.rs",   {tag, "0.1.2"}}},
    {exif,          ".*", {git, "https://github.com/nlfiedler/erlang-exif",  {tag, "2.0.1"}}},
    {lager,         ".*", {git, "https://github.com/basho/lager",            {tag, "3.0.2"}}},
    {mimetypes,     ".*", {git, "https://github.com/spawngrid/mimetypes",    {tag, "47d37a9"}}},
    {nitrogen_core, ".*", {git, "https://github.com/nitrogen/nitrogen_core", {tag, "v2.3.1"}}},
    {nprocreg,      ".*", {git, "https://github.com/nlfiedler/nprocreg",     {tag, "v0.2.2"}}},
    {pwd,           ".*", {git, "https://github.com/nlfiedler/erlang-pwd",   {tag, "2.0.1"}}},
    {ranch,         ".*", {git, "https://github.com/ninenines/ranch",        {tag, "1.2.1"}}},
    {simple_bridge, ".*", {git, "https://github.com/nitrogen/simple_bridge", {tag, "v2.0.1"}}},
    {sync,          ".*", {git, "https://github.com/rustyio/sync",           {tag, "90e9237"}}}
]}.
